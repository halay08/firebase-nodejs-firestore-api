{
    "name": "functions",
    "scripts": {
        "clean": "rimraf dist",
        "lint": "eslint 'src/**/*' --fix",
        "build": "tsc",
        "watch": "ENV_FILE=./.env tsc -w",
        "test": "ENV_FILE=./.env.test jest",
        "predev": "yarn functions:set-env",
        "predevimport": "yarn functions:set-env",
        "dev": "yarn watch | yarn emulators",
        "devimport": "yarn watch | yarn emulators:import",
        "functions:set-env": "firebase functions:config:unset env && firebase functions:config:set env=\"$(cat ./env.json)\"",
        "postfunctions:set-env": "firebase functions:config:get > .runtimeconfig.json",
        "serve": "npm run build && firebase functions:config:set api.version=v1 && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "predeploy": "yarn clean && yarn functions:set-env && yarn build",
        "deploy": "firebase deploy --only functions",
        "auth": "firebase emulators:start --only auth,pubsub",
        "firestore": "firebase emulators:start --only firestore",
        "tools": "firebase emulators:start --only auth,pubsub,firestore,database",
        "emulators": "firebase emulators:start --only auth,pubsub,firestore,database,functions",
        "emulators:export": "firebase emulators:export --force ./.data",
        "emulators:import": "firebase emulators:start --only auth,pubsub,firestore,database,functions --import ./.data",
        "logs": "firebase functions:log"
    },
    "main": "dist/index.js",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && tsc",
            "pre-push": "yarn test"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint 'src/**/*' --fix"
        ]
    },
    "dependencies": {
        "@types/countries-and-timezones": "^2.0.3",
        "@types/express": "^4.17.8",
        "body-parser": "^1.19.0",
        "chalk": "^4.1.0",
        "clear": "^0.1.0",
        "commander": "^6.2.0",
        "cors": "^2.8.5",
        "countries-and-timezones": "^2.3.1",
        "csv-parser": "^3.0.0",
        "cuid": "^2.1.8",
        "dayjs": "^1.9.7",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-validation": "^3.0.6",
        "figlet": "^1.5.0",
        "firebase-admin": "^9.4.1",
        "firebase-functions": "^3.11.0",
        "got": "^11.8.0",
        "helmet": "^4.1.1",
        "http-status-codes": "^2.1.4",
        "inversify": "^5.0.1",
        "inversify-binding-decorators": "^4.0.0",
        "inversify-express-utils": "^6.3.2",
        "inversify-logger-middleware": "^3.1.0",
        "lodash.isempty": "^4.4.0",
        "module-alias": "^2.2.2",
        "nanoid": "^3.1.20",
        "nodemailer": "^6.4.17",
        "nodemailer-smtp-transport": "^2.7.4",
        "pino": "^6.7.0",
        "pino-pretty": "^4.3.0",
        "ramda.isempty": "^0.26.1",
        "reflect-metadata": "^0.1.13",
        "slugify": "^1.5.0"
    },
    "devDependencies": {
        "@types/cors": "^2.8.7",
        "@types/email-templates": "^7.1.0",
        "@types/jest": "^26.0.14",
        "@types/lodash": "^4.14.161",
        "@types/nodemailer": "^6.4.0",
        "@types/nodemailer-smtp-transport": "^2.7.4",
        "@types/pino": "^6.3.2",
        "@types/sinon": "^9.0.9",
        "@types/supertest": "^2.0.10",
        "@types/winston": "^2.4.4",
        "@typescript-eslint/eslint-plugin": "^3.9.1",
        "@typescript-eslint/parser": "^3.8.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.2",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.13.0",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-prettier": "^3.1.4",
        "firebase-functions-test": "^0.2.2",
        "husky": "^4.3.0",
        "inquirer": "^7.3.3",
        "jest": "^26.5.3",
        "lint-staged": "^10.4.2",
        "mkdirp": "^1.0.4",
        "mockdate": "^3.0.2",
        "prettier": "^2.1.2",
        "rimraf": "^3.0.2",
        "serve": "^11.3.2",
        "sinon": "^9.2.1",
        "supertest": "^5.0.0",
        "ts-jest": "^26.4.1",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "private": true,
    "_moduleAliases": {
        "@/src": "dist",
        "@/api/http": "dist/api/http",
        "@/app": "dist/app",
        "@/domain": "dist/domain",
        "@/infra": "dist/infra",
        "@/infra/repositories": "dist/infra/database/repositories"
    }
}